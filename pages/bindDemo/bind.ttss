page {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

}


.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  
  border-radius: 5px;
  box-sizing: border-box;
}

.input {
  display: inline-block;
  margin-bottom: 20px;
}
.input label {
  font-size: 14px;
}

.input input {
    border: 1px solid #cccccc;
    border-radius: 2px;
    padding: 0 10px;
    width: 240px;
    height: 40px;
    font-size: 14px;
}


.btn {
  width: 260px;
  margin: 20px ;
}
